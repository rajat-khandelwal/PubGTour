@model IEnumerable<Asp.MVCCoreWeb.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfirmPassword)
            </th>
            <th>
                <a asp-action="AddorEdit" class="btn btn-outline-success"><i class="fas fa-plus"></i>Create New</a>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfirmPassword)
            </td>
            <td>
                <a asp-action="AddorEdit" asp-route-id="@item.EmployeeID"><i class="fas fa-marker fa-lg">edit</i></a> |
   
                <a asp-action="Delete" asp-route-id="@item.EmployeeID" class="text-danger mb-1"><i class="fas fa-trash-alt fa-lg"></i>delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
